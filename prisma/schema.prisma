generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Room {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  userId   String
  doctorId String
  chats    Chat[]
}

model Chat {
  id      String       @id @default(auto()) @map("_id") @db.ObjectId
  message String
  sentAt  DateTime  @default(now())
  seenAt  DateTime?
  roomId  String? @db.ObjectId
  userId  String
  Room    Room?     @relation(fields: [roomId], references: [id])
}
